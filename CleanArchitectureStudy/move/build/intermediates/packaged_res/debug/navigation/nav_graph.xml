<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/first_fragment">

    <fragment
        android:id="@+id/first_fragment"
        android:label="FirstFragment"
        android:name="com.example.move.fragment.MoveFirstFragment"
        tools:layout="@layout/fragment_move_first">
        <action
            android:id="@+id/move_second_fragment"
            app:destination="@+id/second_fragment"

            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/move_third_fragment"
            app:destination="@+id/third_fragment"

            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/second_fragment"
        android:label="SecondFragment"
        android:name="com.example.move.fragment.MoveSecondFragment"
        tools:layout="@layout/fragment_move_second">
        <action
            android:id="@+id/move_first_fragment"
            app:destination="@+id/first_fragment"

            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/move_third_fragment"
            app:destination="@+id/third_fragment"

            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/third_fragment"
        android:label="ThirdFragment"
        android:name="com.example.move.fragment.MoveThirdFragment"
        tools:layout="@layout/fragment_move_third">
        <action
            android:id="@+id/move_first_fragment"
            app:destination="@+id/first_fragment"

            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/move_second_fragment"
            app:destination="@+id/second_fragment"

            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
</navigation>